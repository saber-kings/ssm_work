<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qst.mapper.UserMapper">
    <!--根据编号查询用户-->
    <select id="queryById" parameterType="java.lang.Long" resultType="com.qst.domain.User">
        SELECT *, user_name AS userName FROM lzf WHERE id = #{id}
    </select>
    <!--查询所有用户-->
    <select id="findAll" resultType="com.qst.domain.User">
        SELECT *, user_name AS userName FROM lzf
    </select>
</mapper>
